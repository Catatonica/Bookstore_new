<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightBlue"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/search3"
        android:focusable="false"
        android:hint="@string/search"
        android:imeOptions="flagNoEnterAction"
        android:padding="4dp"
        android:textStyle="italic"
        app:bootstrapSize="lg"
        app:roundedCorners="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btnForeign"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/foreign_back"
                android:fontFamily="@font/alice"
                android:text="Иностранная\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />

            <Button
                android:id="@+id/btnKid"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginStart="2.5dp"
                android:background="@drawable/kid_back"
                android:fontFamily="@font/alice"
                android:text="Детская\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btnBusiness"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/business_back"
                android:fontFamily="@font/alice"
                android:text="Бизнес-\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />

            <Button
                android:id="@+id/btnFiction"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginStart="2.5dp"
                android:background="@drawable/fiction_back"
                android:fontFamily="@font/alice"
                android:text="Художественная\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnStudy"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginEnd="2.5dp"
                android:background="@drawable/study_back"
                android:fontFamily="@font/alice"
                android:text="Учебная\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />

            <Button
                android:id="@+id/btnNonfiction"
                android:layout_width="170dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginStart="2.5dp"
                android:background="@drawable/nonfiction_back"
                android:fontFamily="@font/alice"
                android:text="Нехудожественная\nлитература"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Button" />
        </TableRow>
    </TableLayout>
</LinearLayout>



